<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2">

    <fragment
        class="com.example.pokedex.controller.PokemonListFragment"
        android:id="@+id/fragment_list"
        android:name="com.example.pokedex.controller.PokemonListFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <fragment
        class="com.example.pokedex.controller.PokemonDetailFragment"
        android:id="@+id/fragment_detail"
        android:name="com.example.pokedex.controller.PokemonDetailFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>